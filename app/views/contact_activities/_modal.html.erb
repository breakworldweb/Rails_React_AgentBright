<div id="new-referral-activity" class="modal" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">

      <%= simple_form_for(@contact_activity) do |f| %>

        <div class="modal-header">
          <button type="button" class="close fui-cross" data-dismiss="modal" aria-hidden="true"></button>
          <h3 class="modal-title">Add New Referral Activity</h3>
        </div>

        <div class="modal-body">
          <%= f.error_notification %>
          <%= f.input :activity_type %>
          <%= f.input :subject %>
          <%= f.input :completed_at %>
          <%= f.input :comments,  :input_html => { :rows => 6 } %>

          <div class="modal-footer">
            <%= f.button :submit, class: "btn-default btn-embossed", "data-dismiss"=> "modal", value: "Submit" %>
            <%= link_to 'Cancel', contact_activities_path, class: "new-record-cancel", "data-dismiss"=> "modal" %>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
