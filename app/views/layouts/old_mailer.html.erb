                    <td valign="top" class="preheaderContainer" style="padding-top:9px;"></td>
                  </tr>
                </table>
                <!-- // END PREHEADER -->
              </td>
            </tr>
            <!--Goes in Yield-->
            <tr>
              <td align="center" valign="top">
                <!-- BEGIN BODY // -->
                <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateBody">
                  <tr>
                    <td valign="top" class="bodyContainer">
                      <%= yield %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
            <!-- End yield -->
            <tr>
              <td align="center" valign="top">
                <!-- BEGIN FOOTER // -->
