<%= simple_form_for [@commentable, @comment], remote: true do |f| %>
  <%= f.input :content,
              label: false,
              input_html: { class: "form-control below12", rows: 2 } %> 

  <%= f.button :submit,
               class: "btn btn-primary btn-embossed below18 btn-loading", value: "Save", "data-loading-text" => "Submitting..." %>
<% end %>
