<fieldset>
  <div class="row multiple-fields add-many">
    <div class="col-sm-7">
      <%= f.input(
        :number,
        wrapper: :appendfull,
        label: false
      ) do %>
        <%= f.input_field(
          :number,
          class: "form-control",
          data: { input_mask: "phone" },
          pattern: "[0-9]*"
        ) %>
        <%= content_tag(
          :span,
          class: "input-group-addon solo-checkbox-input-group-addon"
        ) do %>
          <div class="checkbox solo-checkbox">
            <%= f.input(
              :primary,
              label: "&nbsp;".html_safe,
              title: nil,
              input_html: {
                data: {
                  checked: f.object.primary?,
                  behavior: "phone_primary_checkbox"
                }
              }
          ) %>
         </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-5">
      <%= f.input(
        :number_type,
        collection: ["Mobile", "Home", "Work", "Fax"],
        as: :select,
        include_blank: false,
        label: false
      ) %>
    </div>
    <div class="delete-button">
      <%= f.hidden_field(:_destroy) %>
      <%= link_to("#", class: "remove_fields") do %>
        <span class="fui-trash"></span>
      <% end %>
    </div>
  </div>
</fieldset>
