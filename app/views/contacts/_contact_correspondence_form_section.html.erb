<div class="row main-section" id="contact-correspondence-section-form">
  <div class="col-sm-12" >

    <!--START PAGE CONTENT-->

    <%= simple_form_for @contact, remote: true do |f| %>
      <%= hidden_field_tag :inline_form, "contact_correspondence" %>

      <!--These hidden input fields are added for salutation.js.coffee-->
      <%= f.input :first_name, as: :hidden, input_html: { disabled: true } %>
      <%= f.input :last_name, as: :hidden, input_html: { disabled: true } %>
      <%= f.input :spouse_first_name, as: :hidden, input_html: { disabled: true } %>
      <%= f.input :spouse_last_name, as: :hidden, input_html: { disabled: true } %>
      <span><b>Please check your salutation texts</b></span>
      <br />
      <%= f.input :envelope_salutation,
                  input_html: { class: "form-control" },
                  label: "Envelope Salutation" %>

      <%= f.input :letter_salutation,
                  input_html: { class: "form-control" },
                  label: "Letter Salutation" %>
      <%= f.button :submit, class: 'btn-default btn-embossed
                  btn-loading', value: "Save",
                  "data-loading-text" => "Saving...", remote: true %>
      <a data-behavior="cancel-edit-form" class="clickable">Cancel</a>
    <% end %>
  </div><!--/col-sm-12-->
</div><!--/row main-section-->
