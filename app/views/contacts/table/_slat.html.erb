<li>
  <div class="row">
    <div class="col-sm-9 meta">
      <div class="row">
        <div class="col-sm-7">
          <div class="checkbox solo-checkbox">
            <input class="contact-search-item item-checkbox" value="<%= contact.id %>" id="checkbox-table-<%= contact.id %>" type="checkbox"/>
            <label for="checkbox-table-<%= contact.id %>"></label>
          </div><!-- /.checkbox solo-checkbox -->
          <div class="media grade">
            <a tabindex="0" class="pull-left clickable" rel="popover" data-container="#main-content" role="button" data-toggle="popover" data-trigger="focus" data-placement="right" data-html="true" data-content='<%= render(partial: "contacts/grade_popover", locals: {contact: contact }) %>' data-title="Change Ranking">
              <span class="initials-68 circle bg-<%= contact_activity_status_color(contact) %>">
                <%= contact.grade_to_s %>
              </span>
            </a>

            <div class="media-body">
              <!--TITLE-->
              <h4 class="h4-title"><%= link_to(contact_display_name(contact), contact) %></h4>
              <!--FIRST ROW-->
              <% if contact.full_name.presence %>
                <p><span class="msg dim-el"><%= display_primary_email_address(contact) %></span></p>
              <% end %>
              <!--SECOND ROW-->
              <p><span class="msg bk-word"><%= display_primary_phone_number(contact) %></span></p>
            </div>
          </div>
        </div><!-- /.col-sm-7 -->
        <div class="col-sm-5 hide-phone stats-container nopadding">
          <%= display_contact_slats_data(contact).html_safe %>
        </div><!-- /stats-container.col-sm-5.hide-phone -->
        <div class="col-sm-5 stats-container show-phone">
          <ul class="dotted-list nomargin">
            <li>
              <span>Last Contacted</span>
              <span class="fwb float-right"><%= cal_date(contact.last_contacted_date) %></span>
            </li>
            <li>
              <span>Next Contact</span>
              <span class="fwb float-right"><%= next_contact_date_to_s(contact.next_contact_date) %></span>
            </li>
          </ul><!-- /dotted-list -->
        </div><!-- /stats-container.col-sm-6.show-phone -->
      </div><!-- /row -->
    </div><!-- /meta.col-sm-9 -->
    <div class="col-sm-3 alignr">
      <div class="btn-group btn-group-sm">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Quick Add <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <li><%= link_to 'Lead', new_lead_path(contact_id: contact.id, from_page: FromPage::CONTACTS_INDEX) %></li>
          <li><%= link_to 'Referral', new_contact_activity_path(contact_id: contact.id) %></li>
        </ul>
      </div><!-- /btn-group -->


    </div><!-- /meta-actions.col-sm-3. -->
  </div><!-- /row -->
</li>
