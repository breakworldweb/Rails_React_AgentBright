<div class="phone-overlay-container navigation-overlay clearfix" style="visibility:hidden;opacity:1;z-index:-5;">
  <div class="close-overlay close-left absolute clickable pad-lv3 mdi-navigation-close with-ripple">
  </div>
  <div class="row clearfix">
    <nav class="mobile-nav col-sm-12 overflow-visible clearfix">
      <ul class="primary-links clearfix list-unstyled nomargin nopadding">
        <li>
          <%= link_to(
            "Dashboard",
            dashboard_path,
            class: "phone-menu-link relative pad-lv3 with-ripple"
          ) %>
        </li>
        <% if show_beta_features? %>
          <li>
            <%= link_to(
              "Marketing Center",
              marketing_center_index_path,
              class: "phone-menu-link relative pad-lv3 with-ripple"
            ) %>
          </li>
        <% end %>
        <li>
          <%= link_to(
            "Contacts",
            contacts_path,
            class: "phone-menu-link relative pad-lv3 with-ripple"
          ) %>
        </li>
        <li>
          <%= link_to(
            "Leads",
            user_leads_path,
            class: "phone-menu-link relative pad-lv3 with-ripple"
          ) %>
        </li>
        <li>
          <%= link_to(
            "Clients",
            clients_path,
            class: "phone-menu-link relative pad-lv3 with-ripple"
          ) %>
        </li>
        <li>
          <%= link_to(
            "Tasks",
            tasks_path,
            class: "phone-menu-link relative pad-lv3 with-ripple"
          ) %>
        </li>
        <li>
          <%= link_to(
            "Reports",
            reports_path,
            class: "phone-menu-link relative pad-lv3 with-ripple",
            "data-turbolinks": false
          ) %>
        </li>
        <li>
          <hr class="mar-lv4 mar-lr0 mar-b0">
        </li>
        <li class="pad-lv3">
          <div class="alignc inline-block mar-r3">
            <% if current_user.profile_image %>
              <div class="main-navigation-avatar inline-block avatar" style="background-image: url(<%= current_user.profile_image_url %>)"></div>
            <% else %>
              <div class="main-navigation-avatar inline-block avatar <%=current_user.avatar_class %>">
                <%= current_user.initials.upcase %>
              </div>
            <% end %>
          </div>
          <%= current_user.name %>
        </li>
      </ul>
    </nav>
    <div class="phone-account-menu sliding-card--mask sliding-card--phone-mask clearfix col-sm-12">
      <div class="sliding-card--container sliding-card--phone-container relative">
        <nav class="sliding-card sliding-card--phone clearfix">
          <ul class="clearfix nomargin list-unstyled block-list">
            <li>
              <%= link_to(
                "Profile",
                edit_profile_path,
                class: "phone-menu-link relative pad-lv3 with-ripple"
              ) %>
            </li>
            <li>
              <%= link_to(
                "Account",
                edit_user_registration_path,
                class: "phone-menu-link relative pad-lv3 with-ripple"
              ) %>
            </li>
            <li>
              <%= link_to(
                "Support",
                "#",
                class: "phone-menu-link relative pad-lv3 with-ripple"
              ) %>
            </li>
            <li>
              <%= link_to(
                "Log Out",
                destroy_user_session_path,
                method: :delete,
                class: "phone-menu-link relative pad-lv3 with-ripple"
              ) %>
            </li>
          </ul><!-- /.clearfix -->
        </nav>
      </div>
    </div>
  </div><!-- /.row clearfix -->
</div>
