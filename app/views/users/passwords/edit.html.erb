<% content_for(:body_class, "grey_background") %>
<div class="row">
  <div class="col-xs-12 login-logo">
    <div class="bounding-box"></div>
  </div>
</div>

<div class="row">
  <div class="lastUnit col-sm-12 header form-signin">
    <h2>Change Your Password</h2>
  </div>
</div>


<div class="row">
  <div class="new-record-wrapper line active">

    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "new-record below48 form-signin"}) do |f| %>

        <%= devise_error_messages! %>

        <%= f.hidden_field :reset_password_token %>

        <%= f.input :password, label: false, placeholder: "New Password", input_html: {class: "reset_password"}  %>

        <%= f.input :password_confirmation, label: false, placeholder: "Confirm Password" %>

        <div class="lastUnit col-xs-12 below24 btn-form">
          <%= f.button :submit, class: "btn btn-default btn-block btn-embossed btn-loading",
            value: "Change my password", "data-loading-text" => "Changing..." %>
        </div>

        <div class="alignc">
          <%= render(partial: "users/shared/links") %>
        </div>

        <div class="login-footer">
          <a href="http://www.agentbright.com">
            <div class="footer-logo"></div>
          </a>
          <span class="dim-el"> Â©2010-2014 All Rights Reserved. <a rel="noopener noreferrer" href=" http://agentbright.com/terms-of-service/" target="_blank" tabindex="-1">Privacy
            and Terms</a></span>
        </div>

    <% end %>

  </div>
</div>
