<div class="row">
  <!-- SIDEBAR MENU -->
  <div class="col-sm-3 hide-phone">
    <%=render(partial: "shared/account_settings_sidebar") %>
  </div>
  <!-- MAIN SECTION -->
  <div class="col-sm-9">
    <!--HEADER-->
    <div class="row">
      <div class="lastUnit col-sm-12 header">
        <h1><%= link_to "Account Settings", edit_user_registration_path %></h1>
        <h2><%= @user.full_name %></h2>
      </div>
    </div>
    <%= render(partial: "shared/account_settings_mobile_menu") %>
    <!--END HEADER-->
    <div class="row">
      <div class="col-sm-12">
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "new-record below48"}) do |f| %>
          <div class="sub-section">
            <h3>Edit Password</h3>
            <%#= devise_error_messages! %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <h3>Currently waiting confirmation for: <%= resource.unconfirmed_email %></h3>
            <% end %>
            <%= f.input :password, label: "New Password", input_html: { class: "form-control" } %>
            <%= f.input :password_confirmation, label: "New Password Confirmation", input_html: { class: "form-control" } %>
            <%= f.input :current_password, label: "Current Password", input_html: { class: "form-control" } %>
          </div><!-- /sub-section -->
          <div class="sub-section">
            <%= f.button :submit, class: "btn-primary btn-embossed
              btn-loading",
              value: "Update", "data-loading-text" => "Updating..." %>
          </div><!-- /sub-section -->
        <% end %>
        <div class="sub-section">
          <h3>Cancel my account</h3>
          <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger btn-embossed", :data => { :confirm => "Are you sure? All of your data will be lost forever!" }, :method => :delete %>
        </div><!-- /sub-section -->
      </div>
    </div>
  </div><!-- /col-sm-9 -->
</div><!-- /.row  header-->
